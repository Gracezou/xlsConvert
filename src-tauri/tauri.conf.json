{
  "productName": "Excel文件转换工具",
  "version": "0.1.0",
  "identifier": "com.xlsconvert.tool",
  "build": {
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Excel 文件转换工具",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "center": true
      }
    ]
  }
}
